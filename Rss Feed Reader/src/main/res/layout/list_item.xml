<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_pubdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/tv_item_title"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/layout_normal_margin"
        android:contentDescription="@string/iv_item_thumbnail_description" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/layout_small_margin"
        android:layout_marginRight="@dimen/layout_normal_margin"
        android:layout_marginTop="@dimen/layout_normal_margin"
        android:layout_toRightOf="@+id/iv_item_thumbnail"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="@dimen/item_title_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_item_pubdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_title"
        android:layout_marginBottom="@dimen/layout_small_margin"
        android:layout_marginRight="@dimen/layout_normal_margin"
        android:layout_toRightOf="@+id/iv_item_thumbnail"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="@dimen/item_pub_date_size"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_item_pubdate"
        android:layout_marginBottom="@dimen/layout_normal_margin"
        android:layout_marginLeft="@dimen/layout_normal_margin"
        android:layout_marginRight="@dimen/layout_normal_margin"
        android:textSize="@dimen/item_description_size" />

</RelativeLayout>
